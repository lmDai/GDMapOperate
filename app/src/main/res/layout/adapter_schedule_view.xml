<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70.5dp"
    android:background="#789455"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <LinearLayout
            android:id="@+id/ll_schedule_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_schedule_adapter_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#707484"
                android:textSize="14sp"
                tools:text="09:00" />

            <TextView
                android:id="@+id/tv_schedule_adapter_mmdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:singleLine="true"
                android:textColor="#707484"
                android:textSize="14sp"
                android:visibility="visible"
                tools:text="08月15日" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="70dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="70dp"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/ll_schedule_time"
            android:layout_toRightOf="@+id/ll_schedule_time"
            android:gravity="center|left"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_schedule_adapter_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textColor="@color/white"
                android:textSize="15sp"
                tools:text="张欣欣" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/white" />
</LinearLayout>